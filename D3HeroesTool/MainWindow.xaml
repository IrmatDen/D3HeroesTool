<Window x:Class="D3HeroesTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D3Heroes" Height="458.955" Width="777.239" SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded">
    <StackPanel Margin="5" >
        <Grid Height="78">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="359*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Server:" Margin="5" />
            <ComboBox Name="cbServer" Grid.Column="1" Margin="5,5,3,5" />
            <Label Content="Battle tag:" Grid.Column="2" Margin="5"/>
            <TextBox Name="tbBattleTag" Grid.Column="3" Margin="5" />
            <Label Content="Locale:" Grid.Row="1" Margin="5"/>
            <ComboBox Name="cbLocale" Grid.Column="1" Grid.Row="1" Margin="5,5,3,5"/>
            <Button Content="Invoke this hero!" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Margin="5"/>
        </Grid>
    </StackPanel>
</Window>
